INCLUDE irvine32.inc

.data

	msg BYTE "Enter 10 numbers to be added (or enter 0 to stop):", 0
	output BYTE "Sum: ", 0
	sum DWORD 0


.code
main PROC

	mov edx, OFFSET msg
	call WriteString
	call Crlf

	mov ecx, 10

input_10num:
	call ReadDec
	cmp eax, 0
	jz done_input
	add sum, eax
	loop input_10num


done_input:
	mov edx, OFFSET output
	call WriteString
	mov eax, sum
	call WriteDec


	exit

main ENDP
END main
